<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="res_config_settings_view_navbar_customization" model="ir.ui.view">
        <field name="name">res.config.settings.view.navbar.customization</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div name="integration" position="after">
                <h2>Invoice Approve</h2>
                <div class="row mt16 o_settings_container" name="navbar_customization">
                    <div class="col-12 col-lg-6 o_setting_box" id="navbar_customization_box" title="">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Color</span>
                            <div class="text-muted">
                                Enter the a color hex code
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="Color" for="navbar_color" class="col-lg-3 o_light_label"/>
                                    <field name="navbar_color" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>