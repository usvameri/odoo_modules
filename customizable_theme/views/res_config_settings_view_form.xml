<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="res_config_settings_view_theme_settings" model="ir.ui.view">
        <field name="name">res.config.settings.view.theme.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div name="integration" position="after">
                <div name="theme" position="after">
                    <h2>Theme Colors</h2>
                    <div class="row mt16 o_settings_container" name="theme_primary_color">
                        <div class="col-6 col-lg-6 o_setting_box" id="theme_primary_color" title="">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Theme Primary Color (HEX)</span>
                                <div class="text-muted">
                                    Enter a color hex code
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Color" for="theme_primary_color" class="col-lg-3 o_light_label"/>
                                        <field name="theme_primary_color" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-6 o_setting_box" id="theme_secondary_color" title="">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Theme Secondary Color (HEX)</span>
                                <div class="text-muted">
                                    Enter a color hex code
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Color" for="theme_secondary_color" class="col-lg-3 o_light_label"/>
                                        <field name="theme_secondary_color" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" name="theme_primary_button_color">
                        <div class="col-6 col-lg-6 o_setting_box" id="theme_primary_button_color" title="">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Primary Button Color (HEX)</span>
                                <div class="text-muted">
                                    Enter a color hex code
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Color" for="theme_primary_button_color" class="col-lg-3 o_light_label"/>
                                        <field name="theme_primary_button_color" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-6 o_setting_box" id="theme_secondary_button_color" title="">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Secondary Button Color (HEX)</span>
                                <div class="text-muted">
                                    Enter a color hex code
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Color" for="theme_secondary_button_color" class="col-lg-3 o_light_label"/>
                                        <field name="theme_secondary_button_color" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" name="theme_elements_hover_color">
                        <div class="col-12 col-lg-6 o_setting_box" id="theme_elements_hover_color" title="">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Theme Elements Hover Color (HEX)</span>
                                <div class="text-muted">
                                    Enter a color hex code
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Color" for="theme_elements_hover_color" class="col-lg-3 o_light_label"/>
                                        <field name="theme_elements_hover_color" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>