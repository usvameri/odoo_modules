<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="assets_backend" name="navbar_assets" inherit_id="web.assets_backend">
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/customizable_theme/static/src/js/theme_customize.js"/>
            </xpath>
        </template>

        <template id="assets_frontend" name="navbar_assets" inherit_id="web.assets_frontend">
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/customizable_theme/static/src/js/theme_customize.js"/>
            </xpath>
        </template>

    </data>
</odoo>